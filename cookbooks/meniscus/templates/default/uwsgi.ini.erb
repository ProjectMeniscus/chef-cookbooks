[uwsgi]

socket = <%= node[:meniscus][:uwsgi_socket] %>
protocol = <%= node[:meniscus][:uwsgi_protocol] %>

processes = <%= node[:meniscus][:uwsgi_processes] %>

master = true
vacuum = true

no-default-app = true
memory-report = true

env = PYTHONPATH=<%= node[:meniscus][:pynopath] %>
env = CONFIG_FILE=<%= node[:meniscus][:config_file] %>

pythonpath = ./

module = meniscus.app:application

cache2 = name=cache-config,items=<%= node[:meniscus][:uwsgi_config_cache_items] %>,store=cache-config
cache2 = name=cache-tenant,items=<%= node[:meniscus][:uwsgi_tenant_cache_items] %>
cache2 = name=cache-token,items=<%= node[:meniscus][:uwsgi_token_cache_items] %>
